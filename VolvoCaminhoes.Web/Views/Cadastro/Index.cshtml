@model VolvoCaminhoes.Web.Models.Cadastro.PesquisaModel
@{
}
<div class="row my-4">

    <div class="col">
        <h3>Tratamento de Caminhões</h3>
    </div>

    <div class="col text-right">
        <a type="button" class="btn btn-outline-success" id="btnNovoCaminhao" asp-area="" asp-controller="Cadastro" asp-action="Inserir" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#modal" data-ajax-success="AbrirModal()">Novo</a>
    </div>
</div>

<div class="container-fluid mb-3 pt-4 px-5 pb-3 border rounded-lg">
    <form id="pesquisarForm" asp-area="" asp-controller="Cadastro" asp-action="Pesquisar" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#listaCaminhoes">
        <div class="row">
            <div class="col-sm">
                @Html.LabelFor(x => x.IdModelo, new { @class = "form-label" })
                <div class="dropdown">
                    @Html.DropDownListFor(x => x.IdModelo, (IEnumerable<SelectListItem>)ViewBag.listaModelos, "Todos", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm">
                @Html.LabelFor(x => x.AnoFabricacao, new { @class = "form-label" })
                @Html.TextBoxFor(x => x.AnoFabricacao, null, new { @class = "form-control", @type="number"  })
            </div>
        </div>
        <div class="row mt-2">
            <div class="col text-center">
                <button type="submit" class="btn btn-primary">Pesquisar</button>
            </div>
        </div>
    </form>
</div>

<div id="listaCaminhoes">

</div>

<div class="modal fade" tabindex="-1" id="modal">
</div>

@Html.Partial("Alerta")

@section scripts{
    <script>
        function AbrirModal() {
            $("#modal").modal();
        }
    </script>
}