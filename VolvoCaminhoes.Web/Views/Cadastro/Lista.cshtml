@model VolvoCaminhoes.Web.Models.Cadastro.PesquisaModel

@{
}

<div class="container-fluid mb-3 border rounded-lg">
    @if (Model.Caminhoes != null && Model.Caminhoes.Any())
    {
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Código</th>
                    <th scope="col" class="">Modelo</th>
                    <th scope="col" class="text-center">Ano de Fabricação</th>
                    <th scope="col" class="text-center">Ano do Modelo</th>
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var caminhao in Model.Caminhoes)
                {
                    <tr>
                        <td>@caminhao.Id</td>
                        <td class="">@caminhao.Modelo.Nome</td>
                        <td class="text-center">@caminhao.AnoFabricacao</td>
                        <td class="text-center">@caminhao.AnoModelo</td>
                        <td class="text-center">
                            <a type="button" class="btn btn-primary" asp-area="" asp-controller="Cadastro" asp-action="Alterar" asp-route-id="@caminhao.Id" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#modal"  data-ajax-success="AbrirModal()"><span class="fas fa-edit"></span></a>
                            <a type="button" class="btn btn-danger" asp-area="" asp-controller="Cadastro" asp-action="Excluir" asp-route-id="@caminhao.Id" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#modal"  data-ajax-success="AbrirModal()"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    }
    else
    {
        <div class="text-center">
            <h4>Não há dados.</h4>
        </div>
    }
</div>

<div class="modal fade" tabindex="-1" id="manterModal">
</div>